    "module": "commonjs",
    "noImplicitAny": false,
    "outDir": "dist",
    "sourceMap": false,
    "target": "es5",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "typeRoots": [
      "./node_modules/@types"
